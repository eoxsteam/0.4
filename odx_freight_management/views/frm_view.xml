        <record id="action_receiving_freight_management" model="ir.actions.act_window">
            <field name="name">Freight</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">freight.management</field>
            <field name="view_mode">tree,kanban,form,search</field>
            <field name="view_id" ref="view_receiving_freight_management_tree"/>
            <!--             <field name="view_id" ref="view_receiving_management_form_view"/>-->
            <field name="search_view_id" ref="view_freight_receiving_management_search"/>
            <field name="context">{'check_receive_bool': True }</field>
        </record>
        <record id="action_dispatch_freight_management" model="ir.actions.act_window">
            <field name="name">Freight</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">freight.management</field>
            <field name="view_mode">tree,kanban,form,search</field>
            <field name="view_id" ref="view_dispatch_freight_management_tree"/>
            <!--             <field name="view_id" ref="view_dispatch_management_form_view"/>-->
            <field name="search_view_id" ref="view_freight_dispatch_management_search"/>
            <field name="context">{'check_dispatch_bool': True }</field>
        </record>

        <menuitem id="menu_odx_freight_management" name="Freight" sequence="29"  action="action_receiving_freight_management"
                  web_icon="odx_freight_management,static/description/freight.png"/>

        <menuitem id="menu_odx_freight_menu" name="Freights" parent="menu_odx_freight_management" sequence="1"/>


        <menuitem id="menu_odx_receiving_menu" name="Receiving" parent="menu_odx_freight_menu" sequence="1"
                  action="action_receiving_freight_management"/>
        <menuitem id="menu_odx_dispatch_menu" name="Dispatch" parent="menu_odx_freight_menu" sequence="2"
                  action="action_dispatch_freight_management"/>

        <menuitem id="menu_odx_freight" name="Configuration" parent="menu_odx_freight_management" sequence="10"/>

        <record id="odx_freight_management.menu_odx_freight_management" model="ir.ui.menu">
            <field name="groups_id" eval="[(6,0, [ref('odx_freight_management.group_frm_view_access')])]"/>
        </record>

        <record id="odx_freight_management.menu_odx_freight" model="ir.ui.menu">
            <field name="groups_id" eval="[(6,0, [ref('odx_freight_management.group_frm_view_access')])]"/>
        </record>


    </data>
</odoo>
