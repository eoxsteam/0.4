<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_by_chemistries_form" model="ir.ui.view">
       <field name="name">by.chemistries.wizard.form</field>
       <field name="model">by.chemistries.wizard</field>
       <field name="arch" type="xml">
           <form string="By Chemistries">
               <group>
                   <group> 
                       <field name="chem_category_id" string="Master"/>
