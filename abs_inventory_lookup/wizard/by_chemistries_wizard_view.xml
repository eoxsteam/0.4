                       </div>
                       <label for="chem_weight_min" string="Weight(Min-Max)"/>
                       <div class="o_row">
                           <field name="chem_weight_min"/>
                           <field name="chem_weight_max"/>
                           <field name="chem_weight_selection"/>
                       </div>  
                   </group>
                   <group>
                       <field name="chem_nct_id" string="NCT/CT" options="{'no_create_edit': True,'no_quick_create':True}"/>
                       <field name="chem_oil_id" string="Dry/Oil" options="{'no_create_edit': True,'no_quick_create':True}"/>
                       <label for="chem_id_gauge_min" string="ID Gauge(Min-Max)"/>
                       <div class="o_row">
                           <field name="chem_id_gauge_min"/>
                           <field name="chem_id_gauge_max"/>
                       </div>
