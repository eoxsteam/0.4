                       <div class="o_row">
                           <field name="chem_piw_min"/>
                           <field name="chem_piw_max"/>
                       </div>
                   </group>
               </group>
               <group>
                   <group string="Physicals">
                       <label for="chem_yield_min" string="Yield(Min-Max)"/>
                       <div class="o_row">
                           <field name="chem_yield_min"/>
                           <field name="chem_yield_max"/>
