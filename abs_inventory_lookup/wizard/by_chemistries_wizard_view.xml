                       <div class="o_row">
                           <field name="chem_elongation_min"/>
                           <field name="chem_elongation_max"/>
                       </div>            
                   </group>
                   <group string="Dates">
                       <div class="o_row">
                           <field name="chem_received" widget="radio" string="Received"/>                           
                       </div>
                       <field name="chem_start_date" string="Received"/>
                       <field name="chem_end_date" string="Sold"/>
                       <field name="chem_stock_status" string="Stock Status"/>             
                   </group>
               </group>
               <group string="Chemistries">
                   <group>
