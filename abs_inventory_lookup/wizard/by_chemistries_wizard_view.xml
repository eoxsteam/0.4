                       <field name="chem_partner_reserver_id" string="Reserve Customer"/>   
                   </group>
               </group>
               <group>
                   <group>
                       <label for="chem_gauge_min" string="Gauge(Min-Max)"/>
                       <div class="o_row">
                           <field name="chem_gauge_min"/>
                           <field name="chem_gauge_max"/>
                       </div>
                       <label for="chem_thickness_min" string="Thickness(Min-Max)"/>
                       <div class="o_row">
                           <field name="chem_thickness_min"/>
                           <field name="chem_thickness_max"/>
                       </div>
                       <label for="chem_width_min" string="Width(Min-Max)"/>
