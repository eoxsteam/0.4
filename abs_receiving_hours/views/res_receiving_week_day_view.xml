<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_receiving_week_day_tree" model="ir.ui.view">
        <field name="name">res.receiving.week.day.range.tree</field>
        <field name="model">res.receiving.week.day.range</field>
        <field name="arch" type="xml">
            <tree string="Week Day Range">
                <field name="name"/>
            </tree>
        </field>
    </record>
 
    <record id="view_res_receiving_week_day_form" model="ir.ui.view">
        <field name="name">res.receiving.week.day.range.form</field>
        <field name="model">res.receiving.week.day.range</field>
        <field name="arch" type="xml">
            <form string="Week Day Range">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

     <record id="view_res_contacts_receiving_week_day_tree" model="ir.ui.view">
        <field name="name">res.contacts.receiving.week.day.range.tree</field>
        <field name="model">res.receiving.week.day.range</field>
        <field name="arch" type="xml">
            <tree string="Week Day Range">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_res_contacts_receiving_week_day_form" model="ir.ui.view">
        <field name="name">res.contacts.receiving.week.day.range.form</field>
        <field name="model">res.receiving.week.day.range</field>
        <field name="arch" type="xml">
            <form string="Week Day Range">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_res_receiving_week_day" model="ir.actions.act_window">
        <field name="name">Week Day Range</field>
        <field name="res_model">res.receiving.week.day.range</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_res_receiving_week_day_tree"/>
    </record>

    <record id="action_res_contacts_receiving_week_day" model="ir.actions.act_window">
        <field name="name">Week Day Range</field>
        <field name="res_model">res.receiving.week.day.range</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_res_contacts_receiving_week_day_tree"/>
    </record>

    <menuitem id="sub_menu_week_day_range"
              parent="menu_receiving_hour_config"
              name="Week Day Range"
              action="action_res_receiving_week_day"/>

    <menuitem id="sub_menu_contact_week_day_range"
              parent="menu_receiving_hour_config_contact"
              name="Week Day Range"
              action="action_res_contacts_receiving_week_day"/>
</odoo>
