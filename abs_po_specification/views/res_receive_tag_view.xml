<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_receive_tag_form_view" model="ir.ui.view">
        <field name="name">res.receive.tag.form</field>
        <field name="model">res.receive.tag</field>
        <field name="arch" type="xml">
            <form string="Receive Taf">
                <sheet>
                    <group>
                        <field name="name" required="1"/>  
                    </group>
                </sheet>
            </form>     
        </field>
    </record>
    <record id="res_receive_tag_tree_view" model="ir.ui.view">
        <field name="name">res.receive.tag.tree</field>
        <field name="model">res.receive.tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="action_receive_tag_views" model="ir.actions.act_window">
        <field name="name">Receive Tag</field>
        <field name="res_model">res.receive.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="res_receive_tag_tree_view"/>
    </record>   
    
    <menuitem
            id="menu_action_receive_tag_views"
            name="Receive Tag"
            sequence="99"
            parent="abs_crane.menu_specification"
            action="action_receive_tag_views"/>
</odoo>
