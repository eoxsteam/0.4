<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_yte_form_view" model="ir.ui.view">
        <field name="name">res.yte.form</field>
        <field name="model">res.yte</field>
        <field name="arch" type="xml">
            <form string="yte">
                <sheet>
                    <group>
                        <field name="name" required="1"/>  
                    </group>
                </sheet>
            </form>     
        </field>
    </record>
    <record id="res_yte_tree_view" model="ir.ui.view">
        <field name="name">res.yte.tree</field>
        <field name="model">res.yte</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="action_yte_views" model="ir.actions.act_window">
        <field name="name">YTE</field>
        <field name="res_model">res.yte</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="res_yte_tree_view"/>
    </record>   
    
    <menuitem
            id="menu_action_yte_views"
            name="YTE"
            sequence="99"
            parent="abs_crane.menu_specification"
            action="action_yte_views"/>
</odoo>
