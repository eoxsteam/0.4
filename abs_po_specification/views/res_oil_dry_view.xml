<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_oil_dry_form_view" model="ir.ui.view">
        <field name="name">res.oil.dry.form</field>
        <field name="model">res.oil.dry</field>
        <field name="arch" type="xml">
            <form string="Oil/Dry">
                <sheet>
                    <group>
                        <field name="name" required="1"/>  
                    </group>
                </sheet>
            </form>     
        </field>
    </record>
    <record id="res_oil_dry_tree_view" model="ir.ui.view">
        <field name="name">res.oil.dry.tree</field>
        <field name="model">res.oil.dry</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="action_oil_dry_views" model="ir.actions.act_window">
        <field name="name">Oil Dry</field>
        <field name="res_model">res.oil.dry</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="res_oil_dry_tree_view"/>
    </record>   
    
    <menuitem
            id="menu_action_oil_dry_views"
            name="Oil Dry"
            sequence="99"
            parent="abs_crane.menu_specification"
            action="action_oil_dry_views"/>
</odoo>
