<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_skid_cylinder_form_view" model="ir.ui.view">
        <field name="name">res.skid.cylinder.form</field>
        <field name="model">res.skid.cylinder</field>
        <field name="arch" type="xml">
            <form string="Skid/Cylinder">
                <sheet>
                    <group>
                        <field name="name" required="1"/>  
                    </group>
                </sheet>
            </form>     
        </field>
    </record>
    <record id="res_skid_cylinder_tree_view" model="ir.ui.view">
        <field name="name">res.skid.cylinder.tree</field>
        <field name="model">res.skid.cylinder</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="action_skid_cylinder_views" model="ir.actions.act_window">
        <field name="name">Skid/Cylinder</field>
        <field name="res_model">res.skid.cylinder</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="res_skid_cylinder_tree_view"/>
    </record>   
    
    <menuitem
            id="menu_action_skid_cylinder_views"
            name="Skid/Cylinder"
            sequence="99"
            parent="abs_crane.menu_specification"
            action="action_skid_cylinder_views"/>
</odoo>
