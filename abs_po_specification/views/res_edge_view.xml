<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_edge_view_form_view" model="ir.ui.view">
        <field name="name">res.edge.form</field>
        <field name="model">res.edge</field>
        <field name="arch" type="xml">
            <form string="Edge">
                <sheet>
                    <group>
                        <field name="name" required="1"/>  
                    </group>
                </sheet>
            </form>     
        </field>
    </record>
    <record id="res_edge_view_tree_view" model="ir.ui.view">
        <field name="name">res.edge.tree</field>
        <field name="model">res.edge</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="action_edge_views" model="ir.actions.act_window">
        <field name="name">Edge</field>
        <field name="res_model">res.edge</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="res_edge_view_tree_view"/>
    </record>   
    
    <menuitem
            id="menu_action_edge_views"
            name="Edge"
            sequence="99"
            parent="abs_crane.menu_specification"
            action="action_edge_views"/>
</odoo>

