<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_gauge_type_form_view" model="ir.ui.view">
        <field name="name">res.gauge.type.form</field>
        <field name="model">res.gauge.type</field>
        <field name="arch" type="xml">
            <form string="Gauge Type">
                <sheet>
                    <group>
                        <field name="name" required="1"/>  
                    </group>
                </sheet>
            </form>     
        </field>
    </record>
    <record id="res_gauge_type_tree_view" model="ir.ui.view">
        <field name="name">res.gauge.type.tree</field>
        <field name="model">res.gauge.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="action_gauge_type_views" model="ir.actions.act_window">
        <field name="name">Gauge Type</field>
        <field name="res_model">res.gauge.type</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="res_gauge_type_tree_view"/>
    </record>   
    
    <menuitem
            id="menu_action_gauge_type_views"
            name="Gauge Type"
            sequence="99"
            parent="abs_crane.menu_specification"
            action="action_gauge_type_views"/>
</odoo>
