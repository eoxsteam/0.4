<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_move_operations_tree_inherited_view" model="ir.ui.view">
        <field name="name">stock.move.operations.inherited.views</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lot_id']" position="attributes">
                <attribute name="string">Tag/Serial Number</attribute>
            </xpath>
            <xpath expr="//button[@name='get_lot_serial']" position="attributes">
                <attribute name="string">Generate Tag Numbers</attribute>
            </xpath>
        </field>
    </record>
</odoo>
