<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="po_type_tree_view" model="ir.ui.view">
        <field name="name">res.po.type.tree</field>
        <field name="model">res.po.type</field>
        <field name="arch" type="xml">
            <tree string="PO Type">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="po_type_form_view" model="ir.ui.view">
        <field name="name">res.po.type.form</field>
        <field name="model">res.po.type</field>
        <field name="arch" type="xml">
            <form string="PO Type">
                <sheet>
                    <group>
                        <field name="name"
                               required="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_po_type" model="ir.actions.act_window">
        <field name="name">PO Type</field>
        <field name="res_model">res.po.type</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="po_type_tree_view"/>
    </record>

    <menuitem id="sub_menu_po_type"
              name="PO Type"
              parent="purchase.menu_purchase_config"
              action="action_po_type"/>

</odoo>
